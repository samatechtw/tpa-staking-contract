{
  "name": "tpa-staking-contract",
  "version": "0.0.1",
  "description": "Ethereum smart contracts for staking TPA tokens",
  "author": "TPA Holdings",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "lint": "node_modules/.bin/eslint ./test ./scripts *.js",
    "lint:solidity": "npx hardhat check",
    "dev": "npx hardhat node",
    "deploy-contracts": "npx hardhat run --network localRPC scripts/deploy.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/samatechtw/tpa-staking-contract"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "ethers": "^5.1.4",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-deploy": "^0.7.5",
    "hardhat-gas-reporter": "^1.0.4",
    "solc": "^0.8.4"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "eslint": "^7.25.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eth-gas-reporter": "^0.2.22",
    "ethereum-waffle": "^3.3.0",
    "hardhat": "^2.2.1",
    "hardhat-abi-exporter": "^2.2.1",
    "solidity-coverage": "^0.7.16"
  }
}
